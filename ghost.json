{
  "Ghost": {
    "description": "A publishing platform for professional bloggers.<p>Based on the <a href='https://hub.docker.com/_/ghost' target='_blank'>official OCI image</a>, available for amd64 and arm64 architecture.</p>",
    "version": "1.1",
    "website": "https://ghost.org",
    "more_info": "navigate to the ui link for the admin site or go to the base url for the public facing site",
    "ui": {
      "slug": "ghost"
    },
    "containers": {
      "ghost": {
        "image": "ghost",
        "launch_order": 1,
        "ports": {
          "2368": {
            "description": "Ghost WebUI Port.",
            "label": "WebUI [e.g. 8081]",
            "host_default": 8081,
            "protocol": "tcp",
            "ui": true
          }
        },
        "volumes": {
          "/var/lib/ghost/content": {
            "description": "Share for your blog data.",
            "label": "Blog Storage [e.g. ghost-blog]",
            "min_size": 1073741824
          }
        }
      }
    }
  }
}
