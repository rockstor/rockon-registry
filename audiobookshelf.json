{
  "Audiobookshelf": {
    "description": "Audiobookshelf is an open-source self-hosted media server for your audiobooks and podcasts.<p>Based on the <a href='https://hub.docker.com/r/advplyr/audiobookshelf' target='_blank'>official OCI image</a>, available for amd64 and arm64 architecture.</p>",
    "version": "1.0",
    "website": "https://www.audiobookshelf.org/",
    "more_info": "After installation more media shares can be added.",
    "volume_add_support": true,
    "containers": {
      "audiobookshelf": {
        "image": "advplyr/audiobookshelf",
        "launch_order": 1,
        "ports": {
          "80": {
            "description": "WebUI port.",
            "label": "WebUI port [e.g. 13378]",
            "host_default": 13378,
            "ui": true
          }
        },
        "volumes": {
          "/audiobooks": {
            "description": "Share for audiobooks.",
            "label": "Audiobooks Storage [e.g. audiobookshelf-books]"
          },
          "/config": {
            "description": "Share for the configuration data. It will contain the database (users/books/libraries/settings).",
            "label": "Config Storage [e.g. audiobookshelf-config]"
          },
          "/metadata": {
            "description": "Share for metadata (cache/streams/covers/downloads/backups/logs).",
            "label": "Metadata Storage [e.g. audiobookshelf-metadata]"
          },
          "/podcasts": {
            "description": "Share for podcasts.",
            "label": "Podcasts Storage [e.g. audiobookshelf-podcasts]"
          }
        }
      }
    }
  }
}
