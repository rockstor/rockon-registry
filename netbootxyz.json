{
  "Netboot.xyz": {
    "description": "Create a PXE boot server using <a href='https://ipxe.org/' target='_blank'>iPXE</a>.<p>Based on a <a href='https://hub.docker.com/r/linuxserver/netbootxyz' target='_blank'>custom OCI image</a>, available for amd64 and arm64 architecture.</p>",
    "version": "1.1",
    "website": "https://netboot.xyz/",
    "containers": {
      "netbootxyz": {
        "image": "linuxserver/netbootxyz",
        "launch_order": 1,
        "ports": {
          "3000": {
            "description": "Web-UI for administration & customization.",
            "label": "Web-UI [e.g. 3000]",
            "host_default": 3000,
            "protocol": "tcp",
            "ui": true
          },
          "69": {
            "description": "TFTP server port: udp.",
            "label": "TFTP server port [e.g. 69]",
            "host_default": 69,
            "protocol": "udp"
          },
          "80": {
            "description": "Hosting port for custom assets: tcp.",
            "label": " Custom assets port [e.g. 8080]",
            "host_default": 8080,
            "protocol": "tcp"
          }
        },
        "volumes": {
          "/assets": {
            "description": "Share for asset storage.",
            "label": "Asset Storage [e.g. netboot-assets]"
          },
          "/config": {
            "description": "Share for config storage.",
            "label": "Config Storage [e.g. netboot-config]"
          }
        },
        "environment": {
          "PGID": {
            "description": "Enter a valid GID to use along with the above UID. It (or the above UID) must have full permissions to all Shares mapped in the previous step.",
            "label": "GID to run as",
            "index": 2
          },
          "PUID": {
            "description": "Enter a valid UID to run container as. It must have full permissions to all Shares mapped in the previous step.",
            "label": "UID to run as",
            "index": 1
          }
        }
      }
    }
  }
}
